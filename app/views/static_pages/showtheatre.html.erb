<script type="text/javascript">
  function initialize() {
    var myLatlng = new google.maps.LatLng(<%=nearby['location']['latitude']%>,<%=nearby['location']['longitude']%>);
    var myOptions = {
      zoom: 16,
      center: myLatlng,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    }
    var map = new google.maps.Map(document.getElementById("map-canvas"), myOptions);
    
    var marker = new google.maps.Marker({
        position: myLatlng, 
        map: map,
        title:"<%=nearby['name']%>"
    });   
  }
</script>
<script type="text/javascript">
	jQuery(document).ready(function() {
		 initialize();
	});
</script>
