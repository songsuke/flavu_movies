<body>

<!--<div id="main" class="group" role="main">-->
	<div id="slider">
		<div id="content">
			<div id="myCarousel" class="carousel slide">
			  <ol class="carousel-indicators">
			    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
			    <li data-target="#myCarousel" data-slide-to="1"></li>
			    <li data-target="#myCarousel" data-slide-to="2"></li>
			  </ol>
			  <!-- Carousel items -->
			  <div class="carousel-inner">
			    <div class="active item" id = "slider">
			    	<img src="/assets/iron-man-3.jpg" alt>
			    </div>
			    <div class="item" id="slider">    	
			    	<img src="/assets/hulk.jpg" alt>
				</div>
			    <div class="item" id="slider">
			    	<img src="/assets/captain-america.jpg" alt>
			    </div>
			  </div>
			  <!-- Carousel nav -->
			  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
			  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
			</div>
		</div>
	</div>

	<div id="side">
	    <div id="buddy-side">
	      	<h1> Box Office </h1>
	      	<div id="side-buddy-box">
				<script type="text/javascript" language="javascript" src="http://www.boxofficemojo.com/data/js/wknd5.php?h=boxoffice1&r=boxoffice2"></script>
			</div>
		</div>
	</div>

	<div id="home-content">
		<div id="movies">
			<h1> Movies </h1>
			<div id="nowshowing">
				<div class="group">
					<% @rm['movies'].each do |movie| %> 
						<div class="movie-items1">
							<% if(movie['photos'].length >0) %>
	                    	<%photo = movie['photos'].first%> 
	                    		<%=link_to :action=>"showmovie" , :controller=>"static_pages" , :showid2 => movie['id'] do%>
	                          		<div class="movie-items1">
	                            		<img src="<%=photo['url']%>">             
	                            		<%=movie['title']%>
	                          		</div>
	                        	<%end%>
	                  		<%elsif movie['photos'].length==0%>
	                     		<%= link_to image_tag(@poster ,:class =>'img-rounded') +"#{movie['title']}" , {:controller => "static_pages" ,:action => "showmovie" ,:showid2 => movie['id']}  %>
	                  		<%end%>    
	                  	</div>    				
        			<%end%><!--rmloop-->
        		</div>
			</div>
		</div><!--movies-->
	</div><!--home-content-->

