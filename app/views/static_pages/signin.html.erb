<body>
<h1> Sign In </h1>
  <!--<form action = "/signin" method ="post">-->
<%if flash[:error]%>
  <div class = "alert">
    <p> <%=flash[:error]%></p>
  </div>
<%else%>
<%end%>

  <%= form_tag '/signin' do %>
  <%if (!session[:auth])%>
  <div class='control-group'>
    <div class='controls'>
      <!--<label for="user_login">Login</label>-->
      <%= label_tag("Login") %>
      <!--<input id="user_login" name="user[login]" size="30" type="text">-->
      <%= text_field_tag "login"%>
    </div>
  </div>

  <div class='control-group'>
    <div class='controls'>
      <!--<label for="user_password">Password</label>-->
      <%= label_tag("Password") %>

      <!--<input id="user_password" name="user[password]" size="30" type="password">-->
      <%= password_field_tag("password") %>


    </div>
  </div>
  <div class='controls'>
  <button name="confirm" id="confirm" value="confirm"> Login </button>

   </div>

  <div>
    <h11> please login </h11>
  </div>
  <%else%>
    <h11> Your Welcome <%=@username%> </h11>
  <%end%>
<!--</form>-->
<%end%>

</body>
</html>
