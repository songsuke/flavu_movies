<div id="quick-showtime">
		<h1>Show time</h1>
		<div id="quick-showtime-form">
			<%=form_tag '/home' do %>
		    	<div id="quick-movies">
			        <select id = "movie" name = "movie">
			        <option name = "all_movies" id=movie value="all_movies"> All Movies</option><h1>at</h1>
			        <%@rm['movies'].each do |movie| %>
			        <%@xmovies= movie['title']%>
			        <option name = "<%=@xmovies%>" id=movie value="<%=@xmovies%>"> <%=@xmovies%></option>
			        <%end%>
			        </select>
		     	</div>

		     	<div id="quick-theatres">
			        <select id = "theatre" name = "theatre">
			        <option name = "all_theatres" id=movie value="all_theatres"> All Theatres</option>
			          <%@nt['theatres'].each do |theatre| %>
			          <%@xtheatres= theatre['name']%>

			          <option name = "<%=@xtheatres%>" id=movie value="<%=@xtheatres%>"> <%=@xtheatres%></option>
			          <%end%>
			        </select>
		     	</div>

		    <input class="btn btn-danger" name="commit" type="submit" value=" SHOWTIME ">
		    <%end%>


		</div>
	</div>